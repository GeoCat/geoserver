<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>net.geocat.enterprise</groupId>    
    <artifactId>geoserver</artifactId>
    <version>2.16-SNAPSHOT</version>
  </parent>

  <groupId>net.geocat.enterprise.geoserver</groupId>
  <artifactId>gs-enterprise-webapp</artifactId>
  <packaging>war</packaging>
  <version>2.16-SNAPSHOT</version>
  <name>GeoServer Enterprise Application</name>
  <description>
     GeoServer Web Application for GeoCat distribution. 
     
     Web Application used for enterprise branding, with profiles selecting modules to prepackage for GeoCat Live hosting and GeoCat customers.
  </description>
  
  <dependencies>
    <!-- GeoServer Enterprise modules -->
    <dependency>
      <groupId>net.geocat.enterprise.geoserver</groupId>
      <artifactId>gs-enterprise-theme</artifactId>
      <version>${project.version}</version>
    </dependency>

    <!-- GeoServer modules -->
    <dependency>
      <groupId>org.geoserver.web</groupId>
      <artifactId>gs-web-app</artifactId>
    </dependency>
    
    <!-- GeoServer community plugins -->
    <dependency>
      <groupId>org.geoserver.community</groupId>
      <artifactId>gs-web-resource</artifactId>
      <version>${gs.version}</version>
    </dependency>
  </dependencies>

  <build>
    <finalName>geoserver-enterprise</finalName>
    <resources>
      <resource>
        <directory>src/main/resources</directory>
      </resource>
    </resources>
   
    <plugins>

      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-dependency-plugin</artifactId>
        <version>3.1.1</version>
        <executions>
          <execution>
            <id>unpack</id>
            <phase>prepare-package</phase>
            <goals>
              <goal>unpack</goal>
            </goals>
            <configuration>
              <artifactItems>
                <artifactItem>
                  <groupId>org.geoserver.web</groupId>
                  <artifactId>gs-web-app</artifactId>
                  <version>${project.version}</version>
                  <type>jar</type>
                  <overWrite>false</overWrite>
                  <outputDirectory>${project.build.directory}/resources</outputDirectory>
                  <excludes>/META-INF/**,data/**,/WEB-INF/lib/**</excludes>
                </artifactItem>
              </artifactItems>
            </configuration>
          </execution>
        </executions>
      </plugin>

      <!-- Builds a valid data directory into the web app -->
      <plugin>
        <artifactId>maven-antrun-plugin</artifactId>
        <version>1.8</version>
        <executions>
          <execution>
            <id>dataDirectory</id>
            <phase>prepare-package</phase>
            <configuration>
              <target xmlns:if="ant:if" xmlns:unless="ant:unless">
                 <available file="${configDirectory}/${configId}" property="configIsAvailable" />
                 
                 <echo message="Data directory not provided." unless:set="configIsAvailable"/>
                 <echo message="Data directory: ${configDirectory}/${configId}" if:set="configIsAvailable"/>
                 
                 <copy todir="${project.build.directory}/resources/data" failonerror="false" if:set="configIsAvailable">
                    <fileset dir="${configDirectory}/${configId}" includes="**/**" />
                 </copy>
              </target>
            </configuration>
            <goals>
              <goal>run</goal>
            </goals>
          </execution>
          <execution>
            <id>dataDirectoryClean</id>
            <phase>clean</phase>
            <configuration>
              <target>
                <delete dir="${project.build.directory}/resources/data" />
              </target>
            </configuration>
            <goals>
              <goal>run</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      
      <plugin>
        <artifactId>maven-war-plugin</artifactId>
        <version>3.0.0</version>
        <configuration>
          <webResources>
            <resource>
              <directory>target/resources</directory>
            </resource>
          </webResources>
          <packagingExcludes>WEB-INF/lib/gs-web-app-*.jar</packagingExcludes>
        </configuration>
      </plugin>
      
      <plugin>
        <groupId>org.eclipse.jetty</groupId>
        <artifactId>jetty-maven-plugin</artifactId>
        <version>${jetty.version}</version>
        <configuration>
          <webApp>
            <contextPath>/geoserver</contextPath>
          </webApp>
          <resourceBases>${project.build.directory}/resources</resourceBases>
          <connectors>
            <connector implementation="org.mortbay.jetty.nio.SelectChannelConnector">
              <port>${jetty.port}</port>
              <maxIdleTime>10000</maxIdleTime>
            </connector>
          </connectors>
          <supportedPackagings>
            <supportedPackaging>war</supportedPackaging>
          </supportedPackagings>
          <stopPort>${jetty.stopPort}</stopPort>
          <stopKey>GEOSERVER_JETTY_STOPKEY</stopKey>
          <daemon>false</daemon>
          <contextXml>${project.build.testOutputDirectory}/jetty-context.xml</contextXml>
          <!--systemProperties>
            <systemProperty>
                <name>GEOSERVER_DATA_DIRECTORY</name>
                <value>${configDirectory}/${configId}</value>
            </systemProperty>
          </systemProperties-->
        </configuration>
      </plugin>
    </plugins>
  </build>

  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <jetty.version>9.4.12.v20180830</jetty.version>
    <!--configDirectory>${basedir}/../../geoserver/data</configDirectory>
    <configId>minimal</configId-->
    <jetty.port>8080</jetty.port>
    <jetty.run.daemon>false</jetty.run.daemon>
  </properties>
  

  <profiles>
    <profile>
      <id>release</id>
      <properties>
        <configDirectory>${basedir}/../../geoserver/data</configDirectory>
        <configId>release</configId>
      </properties>
    </profile>
    
    <profile>
      <!-- GeoCat Live -->
      <id>live</id>
      <properties>
        <configDirectory>${basedir}/../../geoserver/data</configDirectory>
        <configId>release</configId>
      </properties>
      <dependencies>
        <dependency>
          <groupId>org.geoserver.extension</groupId>
          <artifactId>gs-wps-core</artifactId>
          <version>${gs.version}</version>
        </dependency>
        <dependency>
          <groupId>org.geoserver.extension</groupId>
          <artifactId>gs-web-wps</artifactId>
          <version>${gs.version}</version>
        </dependency>
      </dependencies>
    </profile>
  </profiles>
  
  
  
</project>